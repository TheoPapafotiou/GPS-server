<launch>
  <arg name="sim" default="false"/>
  <arg name="port" default="/dev/ttyUSB0"/>

  <node name="arbotix" 
        pkg="arbotix_python"
        type="arbotix_driver"
        clear_params="true">
    <rosparam command="load"
              file="$(find pincher_arm_bringup)/config/arm.yaml" />
    <param name="sim" value="$(arg sim)"/>
    <param name="port" value="$(arg port)"/>
  </node>
        
</launch>
